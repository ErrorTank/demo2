.radio {
  border-radius 50%
  width 25px
  height 25px
  display inline-block
  background-color rgba(128, 128, 128, .5)
  color white
  position relative
  cursor pointer
  i {
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
  }
  &.isChecked {
    background-color #7dbc36
  }
  .radio-label {
    position absolute
    top 50%
    left 120%
    transform translateY(-50%)
    color #4d4d4d
    white-space nowrap
    font-size 12px
  }
}
