.drop-zone{
    text-align center
    border 3px dashed #e6e6e6
    position relative

    cursor pointer
    overflow hidden
    &.has-img{
      .in-side{
        opacity 0

      }
      &:hover{
        .in-side{
          opacity 1
        }
      }
    }
    &:hover{
      .in-side{
        background-color rgba(black, 0.1)

      }
      border-color favor
    }
    .in-side{
      padding 50px 0
      opacity 1
      z-index 1

    }
    .upload-input{
      display none
    }
    .venue-map-img{
      position absolute
      width 110%
      top 50%
      left 50%
      transform translate(-50%, -50%)
      z-index 0
    }
}
