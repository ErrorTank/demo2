.inpage-nav {
  background: #7dbc36;
  border-top: 1px solid #7dbc36;


  ul {
    margin: 0;
    padding: 0 15px;
    list-style: none;
    display flex
    align-items center


    @media (min-width: 960px) {
      padding-left: 30px;
    }

    li {



      div{
        display: block;
        color: white;
        height: 100%;
        text-align: center;
        line-height: 52px;
        text-decoration: none;
        cursor pointer
        text-transform uppercase;
        padding: 0 35px;
        font-size 16px
        font-weight 550
        &.disabled{
          cursor not-allowed
        }
        &:not(.disabled) {
          &:hover {
            background-color: darken(#7EBD36, 10%);
          }

          &.active {
            background-color: #F2F2F2;
            height: 52px;
            line-height: 52px;
            color: #5C8A27;
            font-weight: 500;
          }
        }

        &.disabled {
          cursor not-allowed;
          color: mix(#5C8A27, white, 30%);
        }
      }
    }
  }
}


