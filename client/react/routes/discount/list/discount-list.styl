
.discount-list-route{
  .route-header{
    background-color white
    padding 15px 25px
    justify-content space-between
    align-items center
    display flex
    .title{
      color #4d4d4d
      font-weight bold
      font-size md
    }
    .to-add-discount{
      padding 10px 60px
      background-color #2364c2
      color white

      font-weight bold
      font-size 19px
      border none
      border-radius 4px
      text-align center
      transition all 0.1s ease
      &:hover{
        background-color darken(#2364c2, 10%)
      }
    }
  }
  .route-body{
    padding 30px 50px
    text-align center
    .table-wrap{
      margin-top 15px
      .discount-generic{
        padding-top: 5px;

        a {
          margin-left: 6px;
          color #8cc63f
        }
      }
      .discount-unique {

        input {
          border: 1px solid #E6E6E6;
          border-radius: 3px;
          width: 60px;
          padding: 5px;
          margin: 0 10px;
          font-size: 13px;
        }

        a {
          margin-left: 0;
          color #8cc63f
          &.disabled {
            cursor not-allowed;
          }
        }
      }
    }
    .action-panel{
      .search-discount{
        display inline-block
        width 32%
        margin-right 1.3%
        background-color white
        vertical-align top
      }
      .select-org{
        display inline-block
        width 32%
        margin-right 1.3%
        background-color white
        vertical-align top
      }
      .select-season{
        display inline-block
        width 32%
        text-align left
        background-color white
        vertical-align top

      }
    }
  }
}
